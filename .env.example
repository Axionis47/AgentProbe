# AgentProbe Environment Configuration

# ===== Application =====
AGENTPROBE_APP_NAME=AgentProbe
AGENTPROBE_DEBUG=false
AGENTPROBE_API_KEY=changeme-your-api-key-here

# ===== PostgreSQL =====
AGENTPROBE_POSTGRES_HOST=postgres
AGENTPROBE_POSTGRES_PORT=5432
AGENTPROBE_POSTGRES_USER=agentprobe
AGENTPROBE_POSTGRES_PASSWORD=agentprobe
AGENTPROBE_POSTGRES_DB=agentprobe

# ===== Redis =====
AGENTPROBE_REDIS_URL=redis://redis:6379/0

# ===== Kafka =====
AGENTPROBE_KAFKA_BOOTSTRAP_SERVERS=kafka:29092
AGENTPROBE_KAFKA_CONSUMER_GROUP=agentprobe-consumers

# ===== ChromaDB =====
AGENTPROBE_CHROMADB_HOST=chromadb
AGENTPROBE_CHROMADB_PORT=8000

# ===== LLM Provider =====
# Supported: "ollama", "anthropic", "openai"
AGENTPROBE_LLM_PROVIDER=ollama
AGENTPROBE_OLLAMA_BASE_URL=http://host.docker.internal:11434

# Models (LiteLLM format â€” prefix with provider/)
AGENTPROBE_DEFAULT_MODEL=ollama/mistral:7b-instruct
AGENTPROBE_JUDGE_MODEL=ollama/mistral:7b-instruct
AGENTPROBE_USER_SIMULATOR_MODEL=ollama/llama3:8b-instruct-q4_K_M

# Cloud API keys (only needed if switching provider to anthropic/openai)
AGENTPROBE_ANTHROPIC_API_KEY=
AGENTPROBE_OPENAI_API_KEY=

# ===== Celery =====
AGENTPROBE_CELERY_BROKER_URL=redis://redis:6379/1
AGENTPROBE_CELERY_RESULT_BACKEND=redis://redis:6379/2

# ===== Grafana =====
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=agentprobe
GF_USERS_ALLOW_SIGN_UP=false
